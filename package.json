{
  "name": "CalculistDesktop",
  "productName": "Calculist",
  "version": "0.3.1",
  "license": "MIT",
  "description": "Desktop version of Calculist.io",
  "main": "./main.js",
  "build": {
    "appId": "org.calculist.Calculist",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "category": "Science",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "dist": "build"
  },
  "author": {
    "name": "Dan Allison",
    "email": "dan@calculist.io",
    "url": "https://calculist.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calculist/calculist-desktop.git"
  },
  "dependencies": {
    "lodash": "4.11.2"
  },
  "devDependencies": {
    "electron": "1.7.6",
    "electron-builder": "^19.30.1",
    "electron-winstaller": "^2.2.0"
  }
}
